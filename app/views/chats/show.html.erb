<style>
/* Page wrapper */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f6f8;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
}

/* Messages feed */
#messages {
  flex: 1;
  overflow-y: auto;
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 14px;
}

/* Message wrapper */
.message-row {
  display: flex;
  width: 100%;
}

/* USER MESSAGE */
.chat-user {
  margin-left: auto;
  background: #0066ff;
  color: white;
  border-radius: 22px;
  padding: 12px 18px;
  max-width: 70%;
  font-size: 15px;
  line-height: 1.45;
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.08);
}

/* ASSISTANT MESSAGE */
.chat-assistant {
  margin-right: auto;
  background: #ffffff;
  border: 1px solid #e1e3e6;
  border-radius: 22px;
  padding: 14px 20px;
  max-width: 70%;
  font-size: 15px;
  line-height: 1.55;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

/* Markdown output inside assistant bubble */
.chat-assistant h1, .chat-assistant h2, .chat-assistant h3 {
  margin-top: 4px;
  font-weight: 600;
}
.chat-assistant p {
  margin-bottom: 6px;
}
.chat-assistant ul {
  margin: 8px 0 8px 16px;
}

/* Input bar at bottom */
#chat-input-bar {
  background: #fff;
  padding: 14px;
  border-top: 1px solid #ddd;
  display: flex;
  align-items: center;
}

/* Input wrapper */
.chat-input-wrapper {
  flex: 1;
}

.chat-input {
  width: 100%;
  font-size: 15px;
  border-radius: 24px;
  border: 1px solid #d0d3d8;
  padding: 12px 16px;
  background: #fafafa;
  outline: none;
  transition: 0.25s;
}

.chat-input:focus {
  background: white;
  border-color: #0070ff;
  box-shadow: 0 0 0 3px rgba(0,112,255,0.15);
}

/* Send button */
.chat-submit-btn {
  background: #0070ff;
  border: none;
  color: #fff;
  font-weight: 600;
  border-radius: 22px;
  padding: 12px 22px;
  margin-left: 10px;
  cursor: pointer;
  transition: 0.2s;
}

.chat-submit-btn:hover {
  background: #005be0;
  transform: translateY(-1px);
}
</style>

<div class="chat-container" data-controller="autoscroll">

  <div id="messages" data-autoscroll-target="messages">

    <% @chat.messages.each do |message| %>

      <% if message.role == "user" %>
        <div class="message-row">
          <div class="chat-bubble chat-user">
            <%= message.content %>
          </div>
        </div>

      <% else %>
        <div class="message-row">
          <div class="chat-bubble chat-assistant">
            <%= raw(render_markdown(message.content)) %>
          </div>
        </div>
      <% end %>

    <% end %>

  </div>

  <div id="chat-input-bar">
    <%= simple_form_for [@chat, @message],
        html: { class: "chat-form",
                data: { controller:"sendbutton", action: "submit->sendbutton#submit" } } do |f| %>

      <div class="chat-input-wrapper">
        <%= f.input_field :content,
              placeholder: "Type your ingredients or question...",
              class: "chat-input" %>
      </div>

      <%= f.button :submit, "Send",
          class: "chat-submit-btn",
          data: { sendbutton_target: "button" } %>
    <% end %>
  </div>

</div>
