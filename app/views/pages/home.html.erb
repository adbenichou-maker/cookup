<% content_for :hide_navbar, true %>

<div class="landing-container">

  <!-- Hero Section -->
  <section class="landing-hero">
    <div class="hero-badge">
      <i class="fa-solid fa-sparkles"></i>
      <span>AI-Powered Cooking</span>
    </div>
    <%= image_tag "logo_cookup.png", alt: "CookUp Logo", class: "hero-logo" %>
    <p class="hero-tagline">Turn what's in your fridge into restaurant-quality meals</p>
    <p class="hero-description">
      Your personal AI chef that creates custom recipes based on your ingredients, skill level, and time.
    </p>
  </section>

  <!-- Features Section -->
  <section class="landing-features">
    <div class="feature-card-landing">
      <div class="feature-icon-landing green">
        <i class="fa-solid fa-wand-magic-sparkles"></i>
      </div>
      <div class="feature-content">
        <h3>AI Recipe Generator</h3>
        <p>Tell us what you have, get personalized recipe suggestions instantly</p>
      </div>
    </div>

    <div class="feature-card-landing">
      <div class="feature-icon-landing brown">
        <i class="fa-solid fa-kitchen-set"></i>
      </div>
      <div class="feature-content">
        <h3>Master Chef Skills</h3>
        <p>Learn cooking techniques with video tutorials and track your progress</p>
      </div>
    </div>

    <div class="feature-card-landing">
      <div class="feature-icon-landing yellow">
        <i class="fa-solid fa-book-bookmark"></i>
      </div>
      <div class="feature-content">
        <h3>Your Recipe Collection</h3>
        <p>Save favorites, browse curated recipes, and build your cookbook</p>
      </div>
    </div>
  </section>

  <%# <!-- Social Proof -->
  <section class="landing-proof">
    <div class="proof-stats">
      <div class="stat-item">
        <span class="stat-number">500+</span>
        <span class="stat-label">Recipes</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-number">50+</span>
        <span class="stat-label">Skills</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-number">AI</span>
        <span class="stat-label">Powered</span>
      </div>
    </div>
  </section> %>

  <!-- CTA Section -->
  <section class="landing-cta">
    <%= link_to new_user_registration_path, class: "cta-primary" do %>
      <span>Get Started</span>
      <i class="fa-solid fa-arrow-right"></i>
    <% end %>

    <%= link_to new_user_session_path, class: "cta-secondary" do %>
      Already have an account? <strong>Sign In</strong>
    <% end %>
  </section>

</div>
