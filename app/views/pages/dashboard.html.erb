<div class="home-container">

  <!-- Welcome -->
  <div class="home-header">
    <div>
      <h1>Hi <%= current_user.username || current_user.email.split("@").first %>!</h1>
      <h2>What are we cooking?</h2>
    </div>

    <!-- Profile Logout (Temp) -->
    <%= link_to profile_path do %>
      <div>
        <img src="https://icon-library.com/images/3e51b7003375fb7e9e9c233a7f52c79e.png" alt="profile picture image", class="profile-picture-placeholder">
      </div>
    <% end %>
  </div>

  <!-- Progressbar (Inser here) -->
  <div class="profile-section">
    <p class="level-text">Level 1</p>
    <div class="progress-bar">
      <div class="progress-fill" style="width: 70%;"></div>
    </div>
  </div>

  <!-- Cards -->
  <div class="feature-cards">

    <%= link_to skills_path, class: "feature-card" do %>
      <div class="circle-icon"></div>
      <p>Skills</p>
    <% end %>

    <%= link_to recipes_search_path, class: "feature-card" do %>
      <div class="circle-icon">
        <i class="fa-solid fa-utensils overlay-icon"></i>
      </div>
      <p>Recipes</p>
    <% end %>

    <%= link_to "/cookbook", class: "feature-card" do %>
      <div class="circle-icon">
        <i class="fa-solid fa-book overlay-icon"></i>
      </div>
      <p>Cookbook</p>
    <% end %>

  </div>

  <!-- AI Cook -->
  <%= link_to new_chat_path, class: "ai-cook-card" do %>
    AI Cook
  <% end %>

  <!-- Recipe sug -->
  <% if @saved_recipes.any? %>
    <% @saved_recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe), class: "content-card" do %>
        <div class="content-image-placeholder"></div>

        <div>
          <h3><%= recipe.title %></h3>
          <p><%= truncate(recipe.description, length: 80) %></p>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p>You havenâ€™t saved any recipes yet.</p>
  <% end %>

</div>
