<% content_for :hide_navbar, true %>

<div class="auth-container">
  <!-- Header -->
  <div class="auth-header">
    <%= link_to root_path, class: "auth-back-link" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <h1 class="auth-brand">CookUp</h1>
  </div>

  <!-- Welcome Section -->
  <div class="auth-welcome">
    <div class="auth-icon">
      <i class="fa-solid fa-user-plus"></i>
    </div>
    <h2 class="auth-title">Create Account</h2>
    <p class="auth-subtitle">Start your culinary journey today</p>
  </div>

  <!-- Form Card -->
  <div class="auth-card">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification message: "Please fix the errors below:" %>

      <div class="auth-form">
        <div class="auth-input-group">
          <label class="auth-label">Email</label>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: "Enter your email",
                      input_html: { autocomplete: "email", class: "auth-input" } %>
        </div>

        <div class="auth-input-group">
          <label class="auth-label">Password</label>
          <%= f.input :password,
                      required: true,
                      label: false,
                      placeholder: "Create a password",
                      hint: false,
                      input_html: { autocomplete: "new-password", class: "auth-input" } %>
          <span class="auth-hint"><%= "#{@minimum_password_length} characters minimum" if @minimum_password_length %></span>
        </div>

        <div class="auth-input-group">
          <label class="auth-label">Confirm Password</label>
          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      placeholder: "Confirm your password",
                      input_html: { autocomplete: "new-password", class: "auth-input" } %>
        </div>

        <%= f.button :submit, class: "auth-submit" do %>
          <span>Create Account</span>
          <i class="fa-solid fa-arrow-right"></i>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Footer Link -->
  <div class="auth-footer">
    <p>Already have an account? <%= link_to "Sign In", new_user_session_path, class: "auth-link" %></p>
  </div>
</div>
