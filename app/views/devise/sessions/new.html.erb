<% content_for :hide_navbar, true %>

<div class="auth-container">
  <!-- Header -->
  <div class="auth-header">
    <%= link_to root_path, class: "auth-back-link" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <h1 class="auth-brand">CookUp</h1>
  </div>

  <!-- Welcome Section -->
  <div class="auth-welcome">
    <div class="auth-icon green">
      <i class="fa-solid fa-right-to-bracket"></i>
    </div>
    <h2 class="auth-title">Welcome Back</h2>
    <p class="auth-subtitle">Sign in to continue cooking</p>
  </div>

  <!-- Form Card -->
  <div class="auth-card">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="auth-form">
        <div class="auth-input-group">
          <label class="auth-label">Email</label>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: false,
                      placeholder: "Enter your email",
                      input_html: { autocomplete: "email", class: "auth-input" } %>
        </div>

        <div class="auth-input-group">
          <label class="auth-label">Password</label>
          <%= f.input :password,
                      required: false,
                      label: false,
                      placeholder: "Enter your password",
                      input_html: { autocomplete: "current-password", class: "auth-input" } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="auth-remember">
            <%= f.input :remember_me, as: :boolean, label: "Remember me", wrapper: false, input_html: { class: "auth-checkbox" } %>
          </div>
        <% end %>

        <%= f.button :submit, class: "auth-submit" do %>
          <span>Sign In</span>
          <i class="fa-solid fa-arrow-right"></i>
        <% end %>
      </div>
    <% end %>

    <% if devise_mapping.recoverable? %>
      <div class="auth-forgot">
        <%= link_to "Forgot your password?", new_user_password_path, class: "auth-forgot-link" %>
      </div>
    <% end %>
  </div>

  <!-- Footer Link -->
  <div class="auth-footer">
    <p>Don't have an account? <%= link_to "Sign Up", new_user_registration_path, class: "auth-link" %></p>
  </div>
</div>
