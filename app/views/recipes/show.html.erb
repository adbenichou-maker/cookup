<div class="container-fluid p-3" style="background-color: #F7EEDB;">

  <header class="text-center mb-4">
    <h1 class="display-5 fw-bold mb-2" style="color: #4A4A4A;">
      <%= @recipe.title %>
    </h1>
    <% if @recipe.description.present? %>
      <p class="text-muted" style="color: #4A4A4A !important;"><%= @recipe.description %></p>
    <% end %>
  </header>

  <div class="row">
    <div class="col-12">
      <section class="card shadow-sm mb-4">
        <div class="card-header text-white" style="background-color: #8BAA7B;">
          <h2 class="h5 mb-0">Ingredients</h2>
        </div>
        <ul class="list-group list-group-flush">
          <% @recipe.ingredients.each do |name, quantity| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span class="fw-bold" style="color: #4A4A4A;"><%= name.to_s.humanize %></span>
              <span class="badge rounded-pill p-2" style="background-color: #C9815B; color: #F7EEDB;"><%= quantity %></span>
            </li>
          <% end %>
        </ul>
      </section>

      <section class="card shadow-sm mb-4">
        <div class="card-header text-white" style="background-color: #F2C94C;">
          <h2 class="h5 mb-0">Key Techniques & Steps</h2>
        </div>
        <div class="card-body" >
          <ul class="list-unstyled">
            <% @recipe.steps.each_with_index do |step, index| %>

              <% if step.skill.present? %>
                <%= link_to skill_path(step.skill), style: "text-decoration: none;" do %>
                  <li class="d-flex align-items-center mt-2 p-1 border rounded">
                    <%# <i class="bi bi-star-fill me-2" style="color: #4A4A4A;"></i> %>
                    <p style="color: #4A4A4A;"><%= step.skill.title %></p>
                  </li>
                <% end %>

              <% end %>

          <% end %>
          </ul>
          </section>
        <section class="card shadow-sm mb-4">

          <div class="card-header text-white" style="background-color: #F2C94C;">
            <h2 class="h5 mb-0">Reviews</h2>
          </div>
          <ul class="list-unstyled">
            <% @recipe.reviews.each do |review| %>
              <li class="">
                <div class="card mb-4">
                  <div class="card-body">
                    <h5 class="card-title"><%= review.title %></h5>
                    <p class="card-text"><%= review.comment %></p>
                    <div class="d-flex justify-content-end">

                      <% review.rate.times do %>
                        <p>‚≠ê</p>
                      <% end %>
                    </div>

                  </div>



                </div>
              </li>
            <% end %>
          </ul>
        </section>


        </div>
      </section>

    </div>
  </div>
</div>
