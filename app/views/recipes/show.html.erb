<div class="container-fluid p-3" style="background-color: #F7EEDB;">
  <header class="mb-4">
    <div class="d-flex justify-content-between align-items-start">

      <div style="width: 40px;">
        <%= link_to recipes_search_path, class: "profile-back" do %>
          <i class="fa-solid fa-arrow-left"></i>
        <% end %>
      </div>

      <div class="text-center flex-grow-1 mx-3">
        <h1 class="display-5 fw-bold mb-0" style="color: #4A4A4A;">
          <%= @recipe.title %>
        </h1>
        <% if @recipe.description.present? %>
          <p class="text-muted small mt-1" style="color: #4A4A4A !important;"><%= @recipe.description %></p>
        <% end %>

        <%# --- NEW: Prep Time and Recipe Level Display --- %>
        <div class="d-flex justify-content-center align-items-center mt-2">

          <% if @recipe.meal_prep_time.present? %>
            <div class="d-inline-block px-3 py-1 rounded-pill border fw-bold me-2"
                style="background-color: #FCF8EF; color: #C9815B; border-color: #C9815B !important; font-size: 0.9em;">
              <i class="fa-regular fa-clock me-1"></i>
              <%= @recipe.meal_prep_time >= 60 ? '1hr +' : "#{@recipe.meal_prep_time} min" %>
            </div>
          <% end %>

          <% if @recipe.recipe_level.present? %>
            <%
              level_map = { 0 => 'Beginner', 1 => 'Intermediate', 2 => 'Expert' }
              level_text = level_map[@recipe.recipe_level]
            %>
            <div class="d-inline-block px-3 py-1 rounded-pill border fw-bold"
                style="background-color: #FCF8EF; color: #8BAA7B; border-color: #8BAA7B !important; font-size: 0.9em;">
              <i class="fa-solid fa-graduation-cap me-1"></i>
              <%= level_text %>
              <%= @recipe.recipe_level.capitalize %>
            </div>
          <% end %>

        </div>
        <%# ----------------------------------------------- %>

      </div>

      <div style="width: 40px;"></div>

    </div>
    <hr style="border-color: #8BAA7B;">
  </header>

  <div class="row">
    <div class="col-12">

      <section class="card shadow-sm mb-4">
        <div class="card-header text-white" style="background-color: #8BAA7B;">
          <h2 class="h5 mb-0">üõí Ingredients</h2>
        </div>
        <ul class="list-group list-group-flush">
          <% @recipe.ingredients.each do |name, quantity| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span class="fw-bold" style="color: #4A4A4A;"><%= name.to_s.humanize %></span>
              <span class="badge rounded-pill p-2" style="background-color: #C9815B; color: #F7EEDB;"><%= quantity %></span>
            </li>
          <% end %>
        </ul>
      </section>

      <%
        # Pre-filter steps that actually have a skill.
        @skills_for_recipe = @recipe.steps.select { |step| step.skill.present? }.map(&:skill).uniq
      %>

      <% if @skills_for_recipe.any? %>
        <section class="card shadow-sm mb-3">
          <div class="card-header text-white" style="background-color: #C9815B;">
            <h2 class="h5 mb-0">üßë‚Äçüç≥ Key Techniques & Skills</h2>
          </div>
          <div class="card-body" style="background-color: #F7EEDB;">
            <ul class="list-unstyled d-flex flex-wrap gap-2">
              <% @skills_for_recipe.each do |skill| %>
                <%= link_to skill_path(skill, recipe_id: @recipe.id), style: "text-decoration: none;" do %>
                  <li class="p-2 border rounded" style="background-color: #F2C94C; border-color: #C9815B !important;">
                    <p class="mb-0 fw-bold" style="color: #4A4A4A; font-size: 0.9em;">
                      <i class="bi bi-star-fill me-1" style="color: #8BAA7B;"></i>
                      <%= skill.title %>
                    </p>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </section>
      <% end %>

      <div class="d-grid mb-3">
        <%= link_to "START COOKING", recipe_steps_path(@recipe),
          class: "btn btn-lg fw-bold text-white shadow-lg",
          style: "background-color: #8BAA7B; border-color: #8BAA7B;" %>
      </div>
      <section class="card shadow-sm mb-5">
        <div class="accordion" id="reviewsAccordion">

          <div class="accordion-item border-0">
            <h2 class="accordion-header">
              <button class="accordion-button text-white fw-bold collapsed"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#collapseAllReviews"
                      aria-expanded="false"
                      aria-controls="collapseAllReviews"
                      style="background-color: #F2C94C; color: #4A4A4A !important;">
                ‚≠ê Reviews (<%= @recipe.reviews.count %>)
              </button>
            </h2>

            <div id="collapseAllReviews" class="accordion-collapse collapse" data-bs-parent="#reviewsAccordion">
              <div class="accordion-body p-3" style="background-color: #F7EEDB;">

                <% @recipe.reviews.each_with_index do |review, index| %>
                  <% next unless review.persisted? %>

                  <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body p-3">
                      <div class="d-flex justify-content-between align-items-start">

                        <div class="flex-grow-1 me-3">
                          <h6 class="card-title fw-bold mb-1" style="color: #4A4A4A;"><%= review.title %></h6>

                          <small class="text-muted d-block mb-2">
                            By <%= review.user.present? ? review.user.username : 'Unknown User' %>
                          </small>

                          <p class="card-text mb-2" style="color: #4A4A4A;"><%= review.comment %></p>

                          <div class="mt-2" style="color: #8BAA7B;">
                            <%= "‚≠ê" * review.rate %>
                          </div>
                        </div>

                        <% if user_signed_in? && (review.user == current_user) %>
                          <div class="border rounded-circle p-1 d-flex justify-content-center align-items-center flex-shrink-0" style="border-color: #C9815B !important; width: 30px; height: 30px;">
                            <%= button_to recipe_review_path(@recipe, review),
                                method: :delete,
                                data: { turbo_confirm: "Are you sure you want to delete this review?" },
                                class: "btn p-0",
                                style: "color: #C9815B; background: transparent;" do %>
                              <i class="fa-solid fa-x fa-sm"></i>
                            <% end %>
                          </div>
                        <% end %>

                      </div>
                    </div>
                  </div>
                <% end %>

              </div>
            </div>

          </div>
        </div>
      </section>


    </div>
  </div>
</div>
